<li class="blog-post-preview">
	<div class="header-bar">
		<div class="social">
			<a class="facebook" href="http://www.facebook.com/sharer/sharer.php?u={{ slide.permalink }}&title={{ slide.post_title }}"></a>
			<a class="twitter" href="http://twitter.com/intent/tweet?status={{ slide.post_title }}+{{ slide.permalink }}"></a>
			<a class="gplus" href="https://plus.google.com/share?url={{ slide.permalink }}"></a>
		</div>
		<span class="date">{{ slide.post_date|date("m.d.Y") }}</span>
		<span class="comments"></span>
	</div>
	<div class="post">
			{% if slide.video_id %}
				<span class="video_trigger" style="background-image: url(http://img.youtube.com/vi/{{ slide.video_id }}/0.jpg)"></span>
				<div class="md-modal md-effect-13" id="modal-13">
					<div class="md-content">
						<iframe width="800" height="600" data-src="https://www.youtube.com/embed/{{ slide.video_id }}" frameborder="0" allowfullscreen></iframe>			
						<button class="md-close"></button>
					</div>
				</div>
			{% else %}
				<a class="thumb" href="{{ slide.permalink }}"> 
					<img src="{{ slide.thumbnail.src }}"/>
				</a>
			{% endif %}
		<div class="post-content">
			<h2 class="post-title"><a href="{{ slide.permalink }}">{{ slide.post_title }}</a></h2>
			<div class="post-text"><a href="{{ slide.permalink }}">{{ slide.get_preview(40,"",false) }}</a></div>
		</div>
	</div>
</li>